@model HomeViewModel
@using VnExpress.ViewModel.Posts;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- tin moi -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-9">
                <div class="main-tintuc">
                    @foreach (var item in Model.FeaturedPosts)
                    {

                        <div class="img-tintuc">
                            <a href="@Url.Action("Detail", "Home", new { id = item.Id })"><img src="@item.Images" style="width:650px;height:370px" alt="@item.Author"></a>
                        </div>
                        <div>
                            <a class="the-a" asp-controller="Home" asp-action="Details"
                               +.>
                                <h3>@item.Title</h3>
                            </a>
                            <p> @item.ShortContent </p>

                        </div>
                    }
                </div>
                <hr>
                <div class="sub-tintuc" id="subtintuc">
                    @foreach (var item in Model.LatestPosts)
                    {
                        <div class="linecol">
                            <a class="the-a" href="@Url.Action("Detail", "Home", new { id = item.Id })">
                                <h5>@item.Title</h5>
                            </a>
                            <p>
                                @item.ShortContent
                            </p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-3">
                <img src="img/banner-tin-trai.png" alt="">
            </div>
        </div>
    </div>
</section>
<hr>
<!-- end tin moi -->
